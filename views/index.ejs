<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Recette de cannelés</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link rel="stylesheet" href="/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>

    <div class="splash-screen">
    <h1>Bienvenue dans Abchat's Recipe</h1>
    <div id="cooking" class="preloader">
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div id=area>
            <div id="sides">
                <div id="pan"></div>
                <div id="handle"></div>
            </div>
            <div id="pancake">
                <div id="pastry"></div>
            </div>
        </div>
    </div>
    </div>
    

    <nav class="navbar navbar-expand-lg navbar-light" style="display: none;">
      <div class="container">
        <a class="navbar-brand" href="#">Abchat's Recipe</a>
        <form class="navbar-form">
          <input type="text" placeholder="Recherche...">
          <button type="submit">Rechercher</button>
        </form>
      </div>
    </nav>

   <main style="display: none;">

    <div class="container recette">
      <h2>Recette de cannelés</h2>
        <div class="card shadow imgrecette ">
            <img src="https://resize.prod.femina.ladmedia.fr/rblr/652,438/img/var/2020-04/recette-canneles.jpg" alt="">
        </div>
  
        <div class="ingredient">
          <div class="row align-content-between ">
              <div class="col-auto">
                <h4><i class="fas fa-utensils  blue-icon"></i>Ingrédients</h4>
              </div>
              <div class="col accordion-body line"></div>
        </div>
       
              <div class="row " >
                
                <% ingredients.forEach(function(data) { %>
                  <div class="col-md-2">
                    <div class="card story shadow mb-3 custom-card">
                      <img src="pictures/<%= data.picture %>" alt="" class="card-img-top rounded-circle mt-2 mx-auto d-block custom-img">
                      <div class="card-body text-center">
                        <h6 class="card-title"><%= data.quantity %> <%= data.unit %></h6>
                        <% if (preferredLanguage === "fr" && data.translated_name && data.translated_name[0] && data.translated_name[0].fr) { %>

                        <p>
                          <%= data.translated_name[0].fr %>
                        </p>
                        <% } else { %>
                          <p><%= data.name %></p>
                        <% } %>
                      </div>
                      
                    </div>
                  </div>
                 <% }) %>
                </div>
  
    </div>

    <div class="container ">
      <div class="prepa">
        <div class="row align-content-between">
          <div class="col-lg-auto">
            <h4><i class="fas fa-utensils blue-icon"></i>Prépation</h4>
          </div>
        <div class="col accordion-body line"></div>
      </div>
    </div>
    
    <div class="container timing">
      <h6>Temps total</h6>
      <p><%= timing.total.quantity %> <%= timing.total.unit %></p>
      <div class="line"></div>
      <div class="row">
        <div class="col-auto">
          <h6>Préparation</h6>
          <p><%= timing.preparation.quantity %> <%= timing.preparation.unit %></p>
        </div>
        <div class="col-auto">
          <h6>Repos</h6>
          <p> <%= timing.rest.quantity %> <%= timing.rest.unit %></p>
        </div>
        <div class="col-auto">
          <h6>Cuisson</h6>
          <p> <%= timing.cooking.quantity %> <%= timing.cooking.unit %></p>
        </div>
       
      </div>

    </div>

    <div class="prepa">
      <div class="container">
        <% steps.forEach(function(data) { %>
        <div class="row">
          <div class="col etape">
            <h5>Etape: <%=data.order%></h5>
            <% if (data.ingredients.length > 0) { %>
              <% data.ingredients.forEach(function(ingredientId) { %>
                <% const ingredient = ingredients.find((ing) => ing.id === ingredientId); %>
            <img class="ingredient-image" src="/pictures/<%= ingredient.picture %>" alt="<%= ingredient.name %>">
            <% }) %>
            <% } %>
            <p>
              <%=data.description%>
            </p>
          </div>
      </div>
      <% }) %>
    </div>

    </div>


    </div>

   </main>



    <footer style="display: none;">
      <div class="container">
        <!-- Texte de copyright -->
        <p>Copyright © Abchate Ali Ibrahim</p>
        <!-- Logos des réseaux sociaux -->
        <a href="https://github.com/abchate" target="_blank" class="social-icons">
          <i class="fab fa-github"></i>
        </a>
        <a href="https://www.linkedin.com/in/aliibrahimabchate" target="_blank" class="social-icons">
          <i class="fab fa-linkedin"></i>
        </a>
      </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="/script.js"></script>
 </body>
</html>
